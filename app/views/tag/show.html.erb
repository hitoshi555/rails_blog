<div class="warper">
    <div class="contents row" >
        <div>
          <%= paginate(@tweets) %>
        </div>
        <div>
            <% @tweets.each do |tweet| %>
                <div class="col s12 m6 l3">
                    <div class="card blue-grey darken-0">
                    <div class="card-content white-text">
                        <span class="card-title"><%= tweet.id %></span>
                        <p><%= tweet.text %></p>
                        <% unless tweet.tags_relations.empty? %>
                            <% tweet.tags.each do |tag| %>
                                <a href="/tag/<%= tag.id %>">
                                    <%= tag.name%>
                                </a>
                            <% end%>
                        <% else %>
                                たぐがありません
                        <% end %>
                    </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>
